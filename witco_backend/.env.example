# Copy this file to .env and fill in your values.
# Do not commit .env to version control.

# Server
PORT=5000
NODE_ENV=development

# MongoDB (required)
DB=mongodb://localhost:27017/witco

# JWT (required for auth)
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=90d

# Twilio (SMS – optional; see SETUP.md for what to pass)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_NUMBER=

# Base URL for uploads (signatures, etc.) – used in PDFs and links. Default: http://localhost:5000
# UPLOAD_BASE_URL=https://your-app.vercel.app

# AWS S3 – not used; uploads use local storage. Omit these.
# AWS_ACCESS_KEY_ID=
# AWS_ACCESS_KEY_SECRET=

# OpenRouteService (routing/ETA). Free API key at openrouteservice.org
# ORS_API_KEY=
# Default depot address if driver GPS is missing
# ORS_DEFAULT_DEPOT_ADDRESS=7030 Ang Mo Kio Ave 5, #05-33 Northstar @ AMK, Singapore 569880

# OCR behavior
# Force JS OCR (for local simulation of serverless fallback)
# OCR_FORCE_JS=false
# Enable/disable JS OCR fallback
# OCR_JS_FALLBACK=true
# OCR_JS_RENDER_SCALE=2
# OCR_JS_MAX_PAGES=1

# Optional API OCR fallback for scanned PDFs on serverless (recommended for Vercel)
# OCR_OPENAI_FALLBACK=true
# OCR_OPENAI_API_KEY=
# OCR_OPENAI_MODEL=gpt-4o-mini
# OCR_OPENAI_BASE_URL=https://api.openai.com/v1

# Optional OCR.space fallback (free tier available)
# OCR_SPACE_FALLBACK=true
# OCR_SPACE_API_KEY=
# OCR_SPACE_ENDPOINT=https://api.ocr.space/parse/image
# OCR_SPACE_LANGUAGE=eng
# OCR_SPACE_ENGINE=2
# OCR_SPACE_TIMEOUT_MS=55000
